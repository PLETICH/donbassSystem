const Discord = module.require("discord.js");
let xp = require('../xp.json')
module.exports.run = async (bot,message,args) => {
  
let rUser = message.guild.member(message.mentions.users.first() || message.guild.members.get(args[0]));
if(!rUser) {
    let sweetsEmbed = new Discord.RichEmbed()
    .setTitle(`–¢–≤–æ–π –ë–∞–ª–∞–Ω—Å`)
    .setDescription(`–ü—Ä–æ–¥–æ–ª–∂–∞–π –∞–∫—Ç–∏–≤–Ω–∏—á–∞—Ç—å –≤ —Ç–æ–º –∂–µ –¥—É—Ö–µ –∏ –ø–æ–ª—É—á–∞–π –≤—Å–µ –±–æ–ª—å—à–µ –æ—á–∫–æ–≤ =^)`)
    .addField(`üç¨ –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –≤—Å–µ–≥–æ –æ—á–∫–æ–≤:`, `${xp[message.author.id].xp}`)
    .setColor("#f5690d")
    .setFooter(`ID: ${message.author.id} ‚Ä¢ ${message.createdAt}`)
    .setThumbnail(message.author.displayAvatarURL)
    message.channel.send(sweetsEmbed)
} else {
    let sweetsEmbed = new Discord.RichEmbed()
    .setTitle(`–ë–∞–ª–∞–Ω—Å ${rUser.user.tag}`)
    .setDescription(`–ö–ª–∞—Å—Å! —Å—Ç–∞—Ä–∞–µ—Ç—Å—è –±—ã—Ç—å –∞–∫—Ç–∏–≤–Ω—ã–º, –º–æ–ª–æ–¥–µ—Ü =^)`)
    .addField(`üç¨ –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –≤—Å–µ–≥–æ –æ—á–∫–æ–≤:`, `${xp[rUser.id].xp}`)
    .setColor("#6fa1c0")
    .setFooter(`ID: ${rUser.id} ‚Ä¢ ${message.createdAt}`)
    .setThumbnail(rUser.user.displayAvatarURL)
    message.channel.send(sweetsEmbed)
}
}
module.exports.help = {
    name: "balance"
};
